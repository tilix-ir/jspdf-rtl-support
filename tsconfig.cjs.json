{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "declaration": false,
    "outDir": "dist-cjs",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "dist-cjs"]
}
